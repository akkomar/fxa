<div class="card">
  <header>
    <h1 id="fxa-pair-failure-header" class="card-header">
      {{#t}}Pairing not successful{{/t}}
    </h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <form novalidate>
      <div class="bg-image-pair-fail"></div>

      <p>{{#t}}The setup process was terminated. Please sign in with your email.{{/t}}</p>

      {{#showSigninLink}}
        <div class="button-row">
          <button class="button primary-button mt-5" id="signin-button" type="button">{{#t}}Sign in{{/t}}</button>
        </div>
      {{/showSigninLink}}

    </form>
  </section>
</div>
